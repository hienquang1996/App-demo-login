<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ledblinky.MainActivity">


    <TextView
        android:id="@+id/temperature"
        android:layout_width="121dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="159dp"
        android:text="Temperature" />

    <EditText
        android:id="@+id/txtTemperature"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/temperature"
        android:layout_marginEnd="73dp" />

    <TextView
        android:id="@+id/presure"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtTemperature"
        android:text="Pressure" />

    <EditText
        android:id="@+id/txtPressure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temperature"
        android:layout_below="@+id/temperature" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="205dp"
        android:layout_marginTop="115dp"
        android:text="SETTING" />

    <Button
        android:id="@+id/back"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="MENU" />


    <TextView
        android:id="@+id/txtConsole"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnSetting"
        android:layout_below="@+id/btnSetting"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/out"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/temperature"
        android:onClick="onClick"
        android:text="SIGN OUT" />

</RelativeLayout>
